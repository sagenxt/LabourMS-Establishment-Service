{
    "ApiProxy": {
        "BaseUrl": "http://localhost:5053/labourms/v1/services/",
        "Timeout": "00:00:30",
        "MaxRetryAttempts": 3,
        "RetryDelayMs": 1000,
        "UseExponentialBackoff": true,
        "EnableLogging": true,
        "LogSensitiveData": false,
        "DefaultHeaders": {
            "User-Agent": "MyMicroservice/1.0"
        },
        "Authentication": {
            "Type": "Bearer",
            "Token": "your-jwt-token-here"
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
